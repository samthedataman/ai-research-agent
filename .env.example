# LLM Provider: "ollama" or "openrouter"
LLM_PROVIDER=ollama

# Ollama (Local) Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# OpenRouter (Cloud) Settings
OPENROUTER_API_KEY=sk-or-v1-xxxx
OPENROUTER_MODEL=deepseek/deepseek-chat

# RapidAPI (optional - free Google News RSS used if not set)
RAPIDAPI_KEY=

# GitHub Token (optional - unauthenticated gets 60 req/hr)
GITHUB_TOKEN=

# Database
DATABASE_URL=sqlite+aiosqlite:///./agent.db
# For production PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/agent_db

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Agent Settings
COLLECTION_INTERVAL_MINUTES=30
ANALYSIS_INTERVAL_MINUTES=60
REPORT_INTERVAL_HOURS=24

# Search Keywords (comma-separated)
SEARCH_KEYWORDS=AI,machine learning,LLM,agents

# Active Data Collectors (comma-separated)
# Available: news,weather,crypto,reddit,github,arxiv,stocks,wikipedia
ACTIVE_COLLECTORS=news,reddit,arxiv

# Collector-specific settings
WEATHER_LOCATIONS=New York,San Francisco,London
STOCK_SYMBOLS=AAPL,GOOGL,MSFT,NVDA,TSLA
REDDIT_SUBREDDITS=technology,machinelearning,artificial
CRYPTO_COINS=trending

# Logging
LOG_LEVEL=INFO
